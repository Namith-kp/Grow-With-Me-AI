{
  "name": "functions",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "build": "tsc -p .",
    "postbuild": "node -e \"const fs=require('fs');const path=require('path');if(fs.existsSync('lib')){fs.readdirSync('lib').forEach(f=>{fs.copyFileSync(path.join('lib',f),f);});fs.rmSync('lib',{recursive:true});}\"",
    "serve": "npm run build && firebase emulators:start --only functions",
    "deploy": "npm run build && firebase deploy --only functions",
    "lint": "echo 'ok'"
  },
  "dependencies": {
    "@simplewebauthn/server": "^8.3.4",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.1.1"
  },
  "devDependencies": {
    "typescript": "^5.8.2"
  }
}

